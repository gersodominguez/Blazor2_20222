@page "/Usuarios"

<AuthorizeView Roles="Administrador">
<Authorized Context="AuthenticationState ">
<h3>Lista de usuario</h3>

@if(listaUsuarios == null)
        {
            <p>No existen usuarios en el sistema</p>
        }
        else
        {
            <table class="table">
                <head>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                          <th>Clave</th>
                            <th>Rol</th>
                              <th>Esta Activo</th>

                    </tr>
                </head>
                <tbody>

                    @foreach (var user in listaUsuarios)
                    {
                        <tr>
                            <td>@user.Codigo</td>
                             <td>@user.Nombre</td>
                              <td>@user.Rol</td>
                               <td>
                                   @if(@user.EstaActivo)
                                {
                                    <span class="oi io-circle-check" style="color:green;"></span>
                                }
                                else
                                {
                                    <span class="oi oi-circle-x" style="color:red"></span>
                                }                               
                               </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
</AuthorizeView>


